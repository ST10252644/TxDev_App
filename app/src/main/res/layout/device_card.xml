<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDevice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_card"
    android:elevation="4dp"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="22.667dp"
    android:paddingEnd="22.667dp">

    <!-- Main Row: Name/Status Stack + Temperature -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Name & Status Vertical Stack -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Name"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:fontFamily="@font/poppinsmedium" />

            <TextView
                android:id="@+id/deviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Status"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="@font/poppinslight"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Temperature + °C Horizontal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom|center_vertical">

            <TextView
                android:id="@+id/deviceTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/primary"
                android:textSize="40sp"
                android:fontFamily="@font/poppinsmedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="°C"
                android:textColor="@color/text"
                android:textSize="40sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Battery & Door Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deviceBattery"
            android:layout_width="24dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_battery_full" />

        <ImageView
            android:id="@+id/deviceDoor"
            android:layout_width="24dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_door_close"
            android:tint="@color/text"
            android:layout_marginStart="8dp"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <!-- Last Seen -->
    <TextView
        android:id="@+id/deviceLastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:text="Last refreshed: --"
        android:textColor="#B0B0B0"
        android:textSize="12sp" />

</LinearLayout>
