<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical">
    <!-- Scrollable form content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Device Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etDeviceName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"
                        android:hint="Enter device name"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:enabled="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- Device ID (read-only) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Device ID"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDeviceID"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- High Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="High Temp Alert"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etHighTemp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"
                        android:hint="Enter high temp"
                        android:inputType="numberSigned"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:enabled="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- Low Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Low Temp Alert"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etLowTemp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"
                        android:hint="Enter low temp"
                        android:inputType="numberSigned"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:enabled="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- Door Alert Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Door Alert Time"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etDoorAlertTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"
                        android:hint="Enter door alert time"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:enabled="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- Door NO/NC Spinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Door NO/NC"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerDoorType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        style="@style/SpinnerTheme"
                        android:enabled="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#333333" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Save button at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Changes"
            android:backgroundTint="#B8ED55"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:elevation="2dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    </LinearLayout>

</LinearLayout>