<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="329.333dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tertiary"
    android:backgroundTint="@color/secondary">

    <!-- Device Settings Item -->
    <LinearLayout
        android:id="@+id/menu_device_settings"
        android:layout_width="match_parent"
        android:layout_height="57.333dp"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_item_selector"
        android:backgroundTint="@color/tertiary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Device Settings"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- White line separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- View Charts Item -->
    <LinearLayout
        android:id="@+id/menu_view_charts"
        android:layout_width="match_parent"
        android:layout_height="57.333dp"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_item_selector"
        android:backgroundTint="@color/tertiary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="View Charts"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- White line separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- View Reports Item -->
    <LinearLayout
        android:id="@+id/menu_view_reports"
        android:layout_width="match_parent"
        android:layout_height="57.333dp"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_item_selector"
        android:backgroundTint="@color/tertiary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="View Reports"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- White line separator (optional for last item) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:visibility="visible" />

    </LinearLayout>

    <!-- empty Item -->
    <LinearLayout
        android:id="@+id/empty_item"
        android:layout_width="match_parent"
        android:layout_height="57.333dp"
        android:orientation="vertical"
        android:background="@drawable/popup_menu_item_selector"
        android:backgroundTint="@color/tertiary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="View Reports"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- White line separator (optional for last item) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>