<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Inactive Text Style -->
    <style name="NavTextInactive">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item> <!-- 1.5% letter spacing -->
        <item name="android:textColor">@color/text</item>
    </style>


    <!-- Active Text Style -->
    <style name="NavTextActive">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item> <!-- Semi-Bold -->
    </style>

    <style name="ToolbarTitle">

        <item name="android:textSize">14px</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:backgroundTint">#F2F6E5</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="FilterRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Widget.Custom.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/tertiary</item>
    </style>

    <!-- Add these styles to your res/values/styles.xml file -->

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:popupBackground">#1a1a1a</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SpinnerDropdownItemStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/spinner_dropdown_selector</item>
    </style>

    <!-- Add these styles to your res/values/styles.xml -->

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="CustomPopupMenuItemStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:background">@drawable/popup_menu_item_selector</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">43dp</item>
    </style>

</resources>
