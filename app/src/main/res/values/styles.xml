<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Inactive Text Style -->
    <style name="NavTextInactive">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item> <!-- 1.5% letter spacing -->
        <item name="android:textColor">@color/text</item>
    </style>


    <!-- Active Text Style -->
    <style name="NavTextActive">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item> <!-- Semi-Bold -->
    </style>

    <style name="ToolbarTitle">

        <item name="android:textSize">14px</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:backgroundTint">#F2F6E5</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="FilterRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/radio_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ReportHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#1E1E1E</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#1E1E1E</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
